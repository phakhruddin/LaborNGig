<Alloy>
	<Model src="dummy" />
  <Window id="projectdetail_window" title="project Detail" backgroundColor="white">
	  <TableView id="projectdetail_table"  backgroundColor="transparent">
	  	<TableViewSection headerTitle="ProjectDetails">
		  <TableViewRow id="projectdetail_row" Title="projectDetail">
		  	  <Label id="ProjectName" text="{dummy.projectname}" />
		  </TableViewRow>
		  <TableViewRow id="clientprojectdetail_row" Title="clientprojectDetail">
	   		  <Label id="fullname" text="{dummy.fullname}" />
	   	  </TableViewRow>
		  <TableViewRow id="phoneprojectdetail_row" Title="PhoneprojectDetail">
	   		  <Label id="phone" text="{dummy.phone}" />
	   	  </TableViewRow>
	   	  <TableViewRow id="addressprojectdetail_row" Title="addressprojectDetail">
	   		  <Label id="address" text="{dummy.address}" />
	   	  </TableViewRow>
	   	  <TableViewRow id="emailprojectdetail_row" Title="emailprojectDetail">
	   		  <Label id="email" text="{dummy.email}" />
	   	  </TableViewRow>
	   	  <TableViewRow id="companyprojectdetail_row" Title="companyprojectDetail">
	   		  <Label id="company" text="{dummy.company}" />
		  </TableViewRow>
	  </TableViewSection>
	  <TableViewSection headerTitle="Pending Invoice">
		  <TableViewRow id="invoiceprojectdetail_row" Title="invoiceprojectDetail">
	   		  <Label id="invoice" text="{dummy.invoice}" />
		  </TableViewRow>
	  </TableViewSection>
	  <TableViewSection headerTitle="Percent Complete & Date Due">
		  <TableViewRow id="percentcompletedetail_row" Title="percentcompleteDetail">
	   		  <Label id="percentcomplete" text="{dummy.percentcomplete}" />
		  </TableViewRow>
		  <TableViewRow id="dateduedetail_row" Title="datedueDetail">
	   		  <Label id="datedue" text="{dummy.datedue}" />
		  </TableViewRow>
	  </TableViewSection>
	  <TableViewSection headerTitle="Next Appointment">
		  <TableViewRow id="nextapptdetail_row" Title="nextapptDetail">
	   		  <Label id="nextappt" text="{dummy.nextappt}" />
		  </TableViewRow>
	  </TableViewSection>
	  <TableViewSection headerTitle="Notes">
		  <TableViewRow id="notesdetail_row" Title="notesDetail">
	   		  <Label id="notes" text="{dummy.notes}" />
		  </TableViewRow>
	  </TableViewSection>
	  </TableView>
  </Window>
</Alloy>