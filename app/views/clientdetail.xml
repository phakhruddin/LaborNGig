<Alloy>
	<Model src="dummy" />
  <Window id="clientdetail_window" title="Client Detail" backgroundColor="white">
	  <TableView id="clientdetail_table"  backgroundColor="transparent">
	  	<TableViewSection headerTitle="ContactDetails">
		  <TableViewRow id="clientdetail_row" backgroundColor="transparent" opacity="0" height="200" color="#333">
		  	  <Label id="Firstname" text="Firstname:" left="20" top="10"/>
		  	  <Label id="Firstname" text="{dummy.firstname}" left="120" top="10"/>
		  	  <Label id="Lastname" text="Lastname:" left="20" top="30"/>
		  	  <Label id="Lastname" text="{dummy.lastname}" left="120" top="30"/>
		  	  <Label id="phone" text="Phone:" left="20" top="50"/>
	   		  <Label id="phone" text="{dummy.phone}" left="120" top="50"/>
	   		  <Label id="email" text="Email:" left="20" top="70"/>
	   		  <Label id="email" text="{dummy.email}" left="120" top="70"/>
	   		  <Label id="fulladdress" text="Address:" left="20" top="90" />
	   		  <Label id="fulladdress" text="{dummy.fulladdress}" left="120" top="90" />
	   		  <Label id="company" text="Company:" left="20" top="130"/>
	   		  <Label id="company" text="{dummy.company}" left="120" top="130"/>
		  </TableViewRow>
	  </TableViewSection>
	  <TableViewSection headerTitle="Pending Invoice">
		  <TableViewRow id="invoiceclientdetail_row" Title="invoiceClientDetail">
	   		  <Label id="invoice" text="{dummy.invoice}" />
		  </TableViewRow>
	  </TableViewSection>
	  <TableViewSection headerTitle="Pending Project">
		  <TableViewRow id="projectclientdetail_row" Title="projectClientDetail">
	   		  <Label id="project" text="{dummy.project}" />
		  </TableViewRow>
	  </TableViewSection>
	  <TableViewSection headerTitle="Pending Proposal">
		  <TableViewRow id="proposalclientdetail_row" Title="proposalClientDetail">
	   		  <Label id="proposal" text="{dummy.proposal}" />
		  </TableViewRow>
	  </TableViewSection>
	  </TableView>
  </Window>
</Alloy>