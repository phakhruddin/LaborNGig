<Alloy>
	<Model src="dummy" />
  <Window id="invoicedetail_window" title="invoice Detail" backgroundColor="white">
	  <TableView id="invoicedetail_table"  backgroundColor="transparent">
	  	<TableViewSection headerTitle="invoiceDetails">
		  <TableViewRow id="invoicenumber_row" Title="Summary" height="100">
		  	  <Label id="header" color="#333" textAlign="Ti.UI.TEXT_ALIGNMENT_CENTER" top="10" text="Invoice#: {dummy.invoicenumber}" />
	   		  <Label id="header" color="#333" textAlign="Ti.UI.TEXT_ALIGNMENT_CENTER" top="35" text="{dummy.fullname}" />
	   		  <Label id="customernumber" color="gray" left="10" top="65" text="Customer#: {dummy.customernumber}" />
	   	  </TableViewRow>
	  </TableViewSection>
	  <TableViewSection headerTitle="Details">
	  	<TableViewRow id="totalbalance_row" height="80">
	   		  <Label id="total" color="gray"  left="10" top="10" text="{dummy.total}" />
	   		  <Label id="balance" color="gray"   left="10" top="30" text="{dummy.balance}" />
	   		  <Label id="paid" color="gray"  left="10" top="50" text="{dummy.paid}" />
	   		  <Label id="duedate" color="gray" left="10" top="60"  text="{dummy.duedate}" />
		  </TableViewRow>
	  </TableViewSection>
	  <TableViewSection headerTitle="Action">
	  	  <TableViewRow id="duedate_row" Title="duedate" height="70">
	   		  <Label id="phone" color="gray"  left="10" top="30" text="{dummy.phone}" />
	   		  <Label id="email" color="gray" left="10" top="50" text="{dummy.email}" />
		  </TableViewRow>
		  <TableViewRow id="lastpaiddate_row" Title="lastpaiddate">
	   		  <Label id="lastpaiddate" color="gray"  text="{dummy.lastpaiddate}" />
		  </TableViewRow>
		  <TableViewRow id="followupdate_row" Title="followupdate">
	   		  <Label id="followupdate" color="gray" text="{dummy.followupdate}" />
		  </TableViewRow>
	  </TableViewSection>
	  </TableView>
  </Window>
</Alloy>