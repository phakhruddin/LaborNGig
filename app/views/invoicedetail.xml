<Alloy>
	<Model src="dummy" />
  <Window id="invoicedetail_window" title="invoice Detail" backgroundColor="white">
	  <TableView id="invoicedetail_table"  backgroundColor="transparent">
	  	<TableViewSection headerTitle="Summary">
		  <TableViewRow id="invoicenumber_row" color="gray" Title="Summary" height="100">
		  	  <Label id="header" color="#404040" textAlign="Ti.UI.TEXT_ALIGNMENT_CENTER" top="10" text="{dummy.invoicenumber}" />
	   		  <Label id="header" color="#404040" textAlign="Ti.UI.TEXT_ALIGNMENT_CENTER" top="35" text="{dummy.fullname}" />
	   		  <Label id="customernumber" color="#404040" textAlign="Ti.UI.TEXT_ALIGNMENT_CENTER" top="65" text="{dummy.customernumber}" />
	   	  </TableViewRow>
	  </TableViewSection>
	  <TableViewSection headerTitle="Details">
	  	<TableViewRow id="totalbalance_row" height="180">
	  		<Label id="bal_title" color="gray" textAlign="Ti.UI.TEXT_ALIGNMENT_CENTER" top="10" text="balance" />
	  		  <Label id="balance1" color="red" textAlign="Ti.UI.TEXT_ALIGNMENT_CENTER" top="20" text="{dummy.balance}" />
	  		  <Label id="balance2" color="green" textAlign="Ti.UI.TEXT_ALIGNMENT_CENTER" top="20" text="{dummy.balance}" />
	  		  <Label id="currency" color="gray" textAlign="Ti.UI.TEXT_ALIGNMENT_CENTER" top="90" text="{dummy.currency}" />
	   		  <Label id="total" color="gray"  left="10" top="110" text="{dummy.total}" />
	   		  <Label id="paid" color="gray"  left="10" top="130" text="{dummy.paid}" />
	   		  <Label id="duedate" color="red" right="20" top="110"  text="{dummy.duedate}" />
	   		  <Label id="lastpaiddate" color="gray" right="20" top="130" text="{dummy.lastpaiddate}" />
	   		   <Label id="followupdate" color="gray" right="20" top="150" text="{dummy.followupdate}" />
		  </TableViewRow>
	  </TableViewSection>
	  <TableViewSection headerTitle="Action">
	  	  <TableViewRow id="action_row" Title="duedate" height="200">
	   		  <Button id="phone_button" left="10" top="10" height="30" width="300" color="gray" image="light_phone@2x.png" title="{dummy.phone}"/>
	   		  <Button id="email_button" left="20" top="40" height="30" width="300" color="gray" image="light_mail@2x.png" title="{dummy.email}"/>
	   		  <Label id="noaction_button" color="blue" textAlign="Ti.UI.TEXT_ALIGNMENT_CENTER" top="20" text="NO ACTION" />
		  </TableViewRow>  		 
	  </TableViewSection>
	  </TableView>
  </Window>
</Alloy>